<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.anandyadav.expensemanager.AddExpense">

    <LinearLayout
        android:id="@+id/balance"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Balance Remaining"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:weightSum="1"
        android:layout_below="@+id/balance"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Monthly Budget"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/balancevalue"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/textViewBalance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Monthly Budget"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textSuccess"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/balancevalue"
        >
        <TextView
            android:id="@+id/textViewBudget"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Monthly Budget"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/warning"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="349dp"
        android:layout_height="30dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/spinner"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:hint="â‚¹"
        android:inputType="number"/>

    <EditText
        android:id="@+id/comment"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/spinner"
        android:layout_below="@+id/editTextAmount"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Comment"
        android:inputType="textPersonName"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add"
            android:textColor="#ffffff"
            android:background="@drawable/expense_add_button"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
