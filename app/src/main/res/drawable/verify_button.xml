<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/verifyButton" android:width="1dp"/>
            <solid android:color="@color/verifyButton"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/textSuccess" android:width="1dp"/>
            <solid android:color="@color/textSuccess"></solid>
        </shape>
    </item>

</selector>