<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/loginButton" android:width="1dp"/>
            <solid android:color="@color/loginButton"></solid>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/loginButtonAccent" android:width="1dp"/>
            <solid android:color="@color/loginButtonAccent"></solid>
        </shape>
    </item>

</selector>